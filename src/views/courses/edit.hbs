<div class="my-4">
  <h3>Create courses</h3>
  <form method="POST" action="/courses/{{courses._id}}?_method=PUT">

    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        value="{{courses.name}}"
        id="name"
        name="name"
      />
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{courses.description}}</textarea>
    </div>

    <div class="mb-3">
      <label for="videoId" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        value="{{courses.videoId}}"
        id="videoId"
        name="videoId"
      />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>